<Window x:Class="AnagramWPF.WindowWinner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Winner!!" Height="123" Width="300" ResizeMode="NoResize"  WindowStyle="SingleBorderWindow" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="INCREDIBLE!!!" Foreground="Red" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
		<TextBlock Grid.Row="1" Text="You found ALL of the words!" Foreground="Black" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
		<Button Grid.Row="2" Content="OK" HorizontalAlignment="Center" Width="75" Margin="5"/>
	</Grid>
</Window>
